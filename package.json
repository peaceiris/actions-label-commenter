{
  "name": "actions-label-commenter",
  "version": "1.10.0",
  "description": "Label Commenter GitHub Action",
  "main": "lib/index.js",
  "engines": {
    "node": ">=14.17.3",
    "npm": ">=7.19.1"
  },
  "scripts": {
    "postinstall": "npx husky install",
    "lint": "eslint --ext .ts .",
    "lint:fix": "eslint --ext .ts --fix .",
    "test": "jest --coverage --verbose",
    "build": "ncc build ./src/index.ts -o lib --minify",
    "tsc": "tsc --noEmit",
    "fmt": "prettier --write ./**/*.ts",
    "fmt:check": "prettier --check ./**/*.ts",
    "all": "npm run fmt && npm run lint:fix && npm run tsc && npm test",
    "release": "standard-version"
  },
  "lint-staged": {
    "{src,__tests__}/**/*.ts": [
      "prettier --check",
      "eslint",
      "jest --bail --findRelatedTests"
    ],
    "README.md": [
      "npx doctoc@2.0.0 --github"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/peaceiris/actions-label-commenter.git"
  },
  "keywords": [
    "GitHub",
    "Actions",
    "JavaScript",
    "TypeScript"
  ],
  "author": "peaceiris",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/peaceiris/actions-label-commenter/issues"
  },
  "homepage": "https://github.com/peaceiris/actions-label-commenter#readme",
  "dependencies": {
    "@actions/core": "^1.4.0",
    "@actions/github": "^5.0.0",
    "@octokit/types": "^6.21.0",
    "@octokit/webhooks-types": "^4.2.0",
    "js-yaml": "^4.1.0",
    "lodash-es": "^4.17.21",
    "mustache": "^4.2.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.24",
    "@types/js-yaml": "^4.0.2",
    "@types/lodash-es": "^4.17.4",
    "@types/mustache": "^4.1.2",
    "@types/node": "~14",
    "@typescript-eslint/eslint-plugin": "^4.28.4",
    "@typescript-eslint/parser": "^4.28.4",
    "@vercel/ncc": "^0.29.0",
    "eslint": "^7.31.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jest": "^24.3.7",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "lint-staged": "^11.0.1",
    "nock": "^13.1.1",
    "prettier": "2.3.2",
    "standard-version": "^9.3.1",
    "ts-jest": "^27.0.3",
    "typescript": "^4.3.5"
  }
}
