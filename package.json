{
  "name": "actions-label-commenter",
  "version": "1.6.1",
  "description": "Label Commenter GitHub Action",
  "main": "lib/index.js",
  "engines": {
    "node": ">=12.18.1",
    "npm": ">=6.14.5"
  },
  "scripts": {
    "lint": "eslint ./{src,__tests__}/**/*.ts",
    "lint:fix": "eslint --fix ./{src,__tests__}/**/*.ts",
    "test": "jest --coverage --verbose",
    "build": "ncc build ./src/index.ts -o lib --minify",
    "tsc": "tsc",
    "format": "prettier --write **/*.ts",
    "format:check": "prettier --check **/*.ts",
    "release": "standard-version",
    "update-deps": "(git diff 'HEAD@{1}' --name-only | grep 'package-lock.json' > /dev/null) && npm ci || :"
  },
  "husky": {
    "skipCI": true,
    "hooks": {
      "pre-commit": "lint-staged",
      "post-merge": "npm run update-deps; git remote prune origin"
    }
  },
  "lint-staged": {
    "{src,__tests__}/**/*.ts": [
      "prettier --check",
      "eslint",
      "jest --bail --findRelatedTests"
    ],
    "README.md": [
      "npx doctoc@1.4.0 --github"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/peaceiris/actions-label-commenter.git"
  },
  "keywords": [
    "GitHub",
    "Actions",
    "JavaScript",
    "TypeScript"
  ],
  "author": "peaceiris",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/peaceiris/actions-label-commenter/issues"
  },
  "homepage": "https://github.com/peaceiris/actions-label-commenter#readme",
  "dependencies": {
    "@actions/core": "^1.2.6",
    "@actions/github": "^4.0.0",
    "js-yaml": "^3.14.0",
    "mustache": "^4.0.1"
  },
  "devDependencies": {
    "@types/jest": "^26.0.14",
    "@types/js-yaml": "^3.12.5",
    "@types/mustache": "^4.0.1",
    "@types/node": "~12",
    "@typescript-eslint/eslint-plugin": "^4.0.0",
    "@typescript-eslint/parser": "^3.10.1",
    "@vercel/ncc": "^0.24.1",
    "eslint": "^7.10.0",
    "eslint-plugin-jest": "^24.1.0",
    "husky": "^4.3.0",
    "jest": "^26.5.2",
    "jest-circus": "^26.5.1",
    "lint-staged": "^10.4.0",
    "nock": "^13.0.4",
    "prettier": "2.1.2",
    "standard-version": "^9.0.0",
    "ts-jest": "^26.4.1",
    "typescript": "^4.0.3"
  }
}
